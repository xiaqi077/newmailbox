# ==========================================
# 基础配置
# ==========================================
DEBUG=false
APP_NAME=Mailbox Manager
APP_VERSION=1.0.0

# ==========================================
# 数据库配置
# ==========================================
DATABASE_URL=sqlite+aiosqlite:///./data/mailbox.db
# 如需使用 PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/mailbox

# ==========================================
# 安全配置
# ==========================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ==========================================
# Microsoft OAuth 配置
# ==========================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/auth/microsoft/callback
MICROSOFT_AUTH_URL=https://login.microsoftonline.com/common/oauth2/v2.0/authorize
MICROSOFT_TOKEN_URL=https://login.microsoftonline.com/common/oauth2/v2.0/token

# ==========================================
# Google OAuth 配置
# ==========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
GOOGLE_AUTH_URL=https://accounts.google.com/o/oauth2/v2/auth
GOOGLE_TOKEN_URL=https://oauth2.googleapis.com/token

# ==========================================
# IMAP 配置
# ==========================================
IMAP_TIMEOUT=30
IMAP_MAX_CONNECTIONS=10

# ==========================================
# Redis 配置 (可选，用于 WebSocket 和缓存)
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# ==========================================
# 邮件处理配置
# ==========================================
MAX_EMAIL_SIZE=50MB
EMAIL_BATCH_SIZE=50
FETCH_INTERVAL_MINUTES=5

# ==========================================
# 日志配置
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json